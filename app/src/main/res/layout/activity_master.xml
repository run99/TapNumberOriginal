<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="bottom|center_horizontal"
            android:text="1234"
            android:textColor="#000000"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/displayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="24sp"
            android:text="0/5"
            android:textColor="#000000"
            android:textSize="36sp" />

        <LinearLayout
            android:id="@+id/Linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingLeft="32sp"
            android:paddingTop="32sp"
            android:paddingRight="32sp">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f0d311"
                android:onClick="number1"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#11d4f0"
                android:onClick="number2"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f03231"
                android:onClick="number3"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="60sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingLeft="32sp"
            android:paddingRight="32sp">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f03231"
                android:onClick="number4"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f0d311"
                android:onClick="number5"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#11d4f0"
                android:onClick="number6"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="60sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingLeft="32sp"
            android:paddingRight="32sp"
            android:paddingBottom="32sp">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#11d4f0"
                android:onClick="number7"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f03231"
                android:onClick="number8"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f0d311"
                android:onClick="number9"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="60sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="48sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>